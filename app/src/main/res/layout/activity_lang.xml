<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context="com.codepath.android.lollipopexercise.activities.LangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLay">


        <TextView
            android:id="@+id/tvCate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.8" />

        <ImageButton
            android:id="@+id/ivImportant"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:background="@mipmap/ic_favoris"
            android:onClick="onClickFavoris" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLay"
        android:orientation="horizontal"
        android:id="@+id/linearLayu">

    <android.support.design.widget.TabLayout
        android:id="@+id/slinding_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        app:tabGravity="fill" />

        </LinearLayout>>

</RelativeLayout>
